<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style for shoe size buttons -->
    <style name="SizeButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">#FFFFFF</item> <!-- White -->
        <item name="android:textColor">#000000</item> <!-- Black -->
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">#DDDDDD</item> <!-- Light gray -->
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- App theme using MaterialComponents -->
    <style name="Theme.RecycleViewTesting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">#6200EE</item>           <!-- Deep Purple -->
        <item name="colorPrimaryVariant">#3700B3</item>     <!-- Darker Purple -->
        <item name="colorOnPrimary">#FFFFFF</item>          <!-- White text on primary -->

        <!-- Secondary colors -->
        <item name="colorSecondary">#03DAC5</item>          <!-- Teal -->
        <item name="colorSecondaryVariant">#018786</item>   <!-- Darker Teal -->
        <item name="colorOnSecondary">#FFFFFF</item>        <!-- White text on secondary -->

        <!-- Background -->
        <item name="android:windowBackground">#FFFFFF</item> <!-- White -->
    </style>

</resources>
