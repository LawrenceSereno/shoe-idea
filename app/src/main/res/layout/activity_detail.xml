<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- Floating Product Image -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:elevation="10dp"
        android:rotation="-30"
        android:scaleType="centerInside" />

    <!-- Product Detail Card -->

    <!-- Add to Cart Button -->
    <ScrollView
        android:id="@+id/detailScroll"
        android:layout_width="match_parent"
        android:layout_height="441dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-4dp"
        android:background="@drawable/ovalish_edge_background"
        android:clipToPadding="false"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Product Title -->
            <TextView
                android:id="@+id/productTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Nike Court Vision"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Size Text: "Select size" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Select size"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <!-- Size Buttons -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/sizeContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Example Size Buttons -->
                    <Button
                        android:id="@+id/size39"
                        style="@style/SizeButton"
                        android:text="39" />

                    <Button
                        android:id="@+id/size40"
                        style="@style/SizeButton"
                        android:text="40" />

                    <Button
                        android:id="@+id/size41"
                        style="@style/SizeButton"
                        android:text="41" />

                    <Button
                        android:id="@+id/size42"
                        style="@style/SizeButton"
                        android:text="42" />

                    <Button
                        android:id="@+id/size43"
                        style="@style/SizeButton"
                        android:text="43" />

                    <Button
                        android:id="@+id/size44"
                        style="@style/SizeButton"
                        android:text="44" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Product Price -->
            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="₱5,499"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Product Description -->
            <TextView
                android:id="@+id/productDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="6dp"
                android:text="In love with the classic look of ’80s basketball but have a thing for the fast-paced culture of today’s game? Then the Nike Court Vision Low is your go-to sneaker."
                android:textColor="#FFF"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addToCartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Add to Cart"
        android:textStyle="bold"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:padding="14dp" />
</RelativeLayout>
