<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- RadioButton to indicate the selected address -->
    <RadioButton
        android:id="@+id/radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Select address"/>

    <!-- Name TextView -->
    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/radio_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Phone TextView -->
    <TextView
        android:id="@+id/item_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/item_name"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Region TextView -->
    <TextView
        android:id="@+id/item_region"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Region"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/item_phone"
        app:layout_constraintTop_toBottomOf="@id/item_phone"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Street TextView -->
    <TextView
        android:id="@+id/item_street"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Street"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/item_region"
        app:layout_constraintTop_toBottomOf="@id/item_region"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Unit TextView -->
    <TextView
        android:id="@+id/item_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Unit"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/item_street"
        app:layout_constraintTop_toBottomOf="@id/item_street"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
